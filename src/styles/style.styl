$header-font-size = 25px
$color-very-light = #EEEEEE
$color-light = #6699FF
$color-medium =#3366CC
$color-dark = #003399
$color-input = #000000
$padding-left-list-wrapper = 10px
$item-list-height = 25px
$border-radius = 5px

border-top-radius(n)
  border-radius: n n 0 0

border-bottom-radius(n)
  border-radius: 0 0 n n
*
  padding: 0
  margin: 0
  color: #FFFFFF

.header
  padding: 10px
  background-color $color-dark

  .header__title
    font-weight: bold
    font-size: $header-font-size
    color: $color-very-light

.content
  padding: 10px

.list-wrapper
  background-color: $color-light
  border-top-radius($border-radius)

  .list-wrapper__header
    background-color: $color-medium
    padding: 5px $padding-left-list-wrapper
    color: $color-very-light
    border-top-radius($border-radius)

  .list-wrapper__body
    padding: 5px $padding-left-list-wrapper

.list-item
  height: $item-list-height
  line-height: $item-list-height

  .list-item__check
    margin-right: 5px;

  .list-item__delete
    width: 15px
    height: $item-list-height
    display: inline-block
    background-size: 15px 15px
    background-image: url('../img/delete.svg')
    background-repeat no-repeat
    background-position: center
    float: right

  .list-item__label--checked
    text-decoration: line-through

.item-adder
  padding: 5px $padding-left-list-wrapper
  background-color: $color-medium
  border-bottom-radius($border-radius);

  .item-adder__input
    color: $color-input
    padding: 5px 10px

  .item-adder__btn
    background-color: $color-dark
    padding: 5px 10px